{
  "name": "ws-promise",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\"",
    "lerna:publish:yes": "yarn run prepublishOnly && lerna publish --yes --cd-version patch",
    "prepublishOnly": "yarn run prepublishOnly:check-bin",
    "prepublishOnly:check-bin": "ynpx --quiet @yarn-tool/check-pkg-bin",
    "prepublishOnly:lockfile": "ynpx --quiet sync-lockfile",
    "ncu": "yarn-tool ncu -u && yarn-tool ws exec yarn-tool ncu -- -u",
    "sort-package-json": "yarn-tool sort && yarn-tool ws exec yarn-tool sort"
  },
  "resolutions": {},
  "dependencies": {
    "bluebird": "^3.7.2",
    "bluebird36": "npm:bluebird@< 3.7.0 >= 3.6.0",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@bluelovers/tsconfig": "^1.0.28",
    "@types/bluebird": "^3.5.36",
    "@types/jest": "^27.4.0",
    "@types/node": "*",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.3"
  },
  "peerDependencies": {
    "lerna": "^4"
  }
}
